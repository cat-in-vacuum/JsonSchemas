{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/prbsparx/JsonSchemas/master/k8s.networkpolicies.calico.json",
    "title": "Kubernetes Calico NetworkPolicies",
    "description": "NetworkPolicies built for Calico networking in Kubernetes",
    "type": "object",
    "properties": {
        "apiVersion": {
            "description": "apiVersion: crd.projectcalico.org/v1",
            "type": "string",
            "enum": [ "crd.projectcalico.org/v1" ]
        },
        "kind": {
            "type": "string",
            "enum": [ "NetworkPolicy" ]
        },
        "metadata": {
            "type": "object",
            "properties": {
                "name": { "type": "string" }
            }
        },
        "spec": {
            "type": "object",
            "properties": {
                "selector": { "type": "string" },
                "policyTypes": { "$ref": "#/definitions/policyTypes" },
                "ingress": { "$ref": "#/definitions/ingress_egress" },
                "egress": { "$ref": "#/definitions/ingress_egress" }
            }
        }
    },
    "definitions": {
        "policyTypes": { 
            "type": "array", 
            "items": {
                "type": "string",
                "enum": [ "Ingress", "Egress" ]
            }
        },
        "ingress_egress": { 
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "action": { "type": "string", "enum": [ "allow", "deny", "log" ] },
                    "protocol": { "type": "string", "enum": [ "TCP", "UDP" ] },
                    "source": { "$ref": "#/definitions/source_destination" },
                    "destination": { "$ref": "#/definitions/source_destination" }
                }
            }
        },
        "source_destination": {
            "type": "object",
            "properties": {
                "selector": { "type": "string" },
                "namespaceSelector": { "type": "string" },
                "nets":  { "type": "array" },
                "ports": { "type": "array" }
            }
        }
    }
}
